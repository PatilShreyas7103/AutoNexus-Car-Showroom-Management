<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Audi Cars | AutoNexus</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <!-- Bootstrap 5 CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <%- include('partials/companypage') %>
  </head>
  <body>
    <!-- Navbar (same as index.ejs) -->
    <%- include('partials/navbar') %>

    <!-- Brand Hero Section -->
    <section class="brand-hero">
      <div class="brand-hero-box text-center">
        <h1>Audi Cars</h1>
        <p>Explore the latest Audi models available at AutoNexus</p>
        <!-- <a href="/brands" class="hero-btn">Explore More Brands</a> -->
      </div>
    </section>

    <!-- Audi Cars Gallery Section -->
    <div class="container brand-section">
      <h2 class="text-center mb-4 fw-bold" style="letter-spacing: 1px">
        Available Audi Cars
      </h2>
      <div class="row g-4 justify-content-center">
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card car-card h-100">
            <img src="/images/r8.jpg" class="card-img-top" alt="Audi R8" />
            <div class="card-body text-center">
              <h5 class="card-title">R8</h5>
              <a href="/audiR8" class="btn btn-outline-primary btn-block"
                >Details</a
              >
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card car-card h-100">
            <img src="/images/Q7.jpg" class="card-img-top" alt="Audi Q7" />
            <div class="card-body text-center">
              <h5 class="card-title">Q7</h5>
              <a href="/audiQ7" class="btn btn-outline-primary btn-block"
                >Details</a
              >
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card car-card h-100">
            <img src="/images/RS7.jpg" class="card-img-top" alt="Audi RS7" />
            <div class="card-body text-center">
              <h5 class="card-title">RS7</h5>
              <a href="/audiRS7" class="btn btn-outline-primary btn-block"
                >Details</a
              >
            </div>
          </div>
        </div>
        <div style="width: 50"></div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card car-card h-100">
            <img src="/images/A8.jpg" class="card-img-top" alt="Audi A8" />
            <div class="card-body text-center">
              <h5 class="card-title">A8</h5>
              <a href="/audia8" class="btn btn-outline-primary btn-block"
                >Details</a
              >
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card car-card h-100">
            <img src="/images/tt.jpg" class="card-img-top" alt="Audi TT" />
            <div class="card-body text-center">
              <h5 class="card-title">TT</h5>
              <a href="/auditt" class="btn btn-outline-primary btn-block"
                >Details</a
              >
            </div>
          </div>
        </div>
        <!-- Add more Audi car cards as needed -->
      </div>
    </div>

    <!-- Footer (same as index.ejs) -->
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
