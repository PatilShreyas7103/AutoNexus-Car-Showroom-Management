<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Aston Martin Rapide | AutoNexus</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="icon" type="image/png" href="/images/favicon.png" />
<%- include('partials/car-style') %>
</head>
<body>
    <!-- Navbar -->
<%- include('partials/navbar') %>

    <div class="car-details-container">
        <h1 class="car-title">Aston Martin Rapide <span style="font-size:1.1rem; font-weight:400;">(Rs 3.29 Cr*)</span></h1>
        <!-- Car Image Viewer -->
        <div class="image-viewer-container">
            <button class="image-viewer-btn left" onclick="prevImage()" aria-label="Previous Image">&#8592;</button>
            <img src="/images/rapide-1.jpg" class="image-viewer-img" id="carImage" alt="Aston Martin Rapide">
            <button class="image-viewer-btn right" onclick="nextImage()" aria-label="Next Image">&#8594;</button>
        </div>
        <!-- Car Description -->
        <div class="car-description">
            <p>
                The Aston Martin Rapide is a four-door luxury sports car that blends performance with practicality. Powered by a V12 engine, it offers a spacious cabin, refined interiors, and the signature Aston Martin driving experience for both driver and passengers.
            </p>
        </div>
        <!-- Car Info Tables -->
        <div class="row justify-content-center align-items-stretch">
            <div class="col-md-6 d-flex">
                <div class="info-box flex-fill mx-2 h-100 d-flex flex-column justify-content-center" style="height:340px; min-height:340px;">
                    <div class="section-heading">Economy & Performance</div>
                    <table class="car-info-table">
                        <thead>
                            <tr>
                                <th>Economy</th>
                                <th>Performance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Mileage: 10.9 kmpl</td>
                                <td>Engine: 5935 cc (V12)</td>
                            </tr>
                            <tr>
                                <td>Fuel Type: Petrol</td>
                                <td>BHP: 552</td>
                            </tr>
                            <tr>
                                <td>Service Cost: Rs 65,000/yr</td>
                                <td>No. of cylinders: 12</td>
                            </tr>
                            <tr>
                                <td>Fuel Tank: 90L</td>
                                <td>No. of Gears: 8 Speed Automatic</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-6 d-flex">
                <div class="info-box flex-fill mx-2 h-100 d-flex flex-column justify-content-center" style="height:340px; min-height:340px;">
                    <div class="section-heading">Comfort & Safety</div>
                    <table class="car-info-table">
                        <thead>
                            <tr>
                                <th>Comfort</th>
                                <th>Safety</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Transmission: Automatic</td>
                                <td>ABS: Yes</td>
                            </tr>
                            <tr>
                                <td>Rear AC vents: Yes</td>
                                <td>Driver Airbag: Yes</td>
                            </tr>
                            <tr>
                                <td>Seating capacity: 4</td>
                                <td>Parking Sensor: Yes</td>
                            </tr>
                            <tr>
                                <td>Bootspace: 317L</td>
                                <td>Air Bag: Yes</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Highlights -->
        <div class="section-heading">Rapide Highlights</div>
        <div class="car-description">
            <ul>
                <li>Four-door luxury sports car with V12 power.</li>
                <li>Spacious and refined interiors.</li>
                <li>Signature Aston Martin performance and style.</li>
                <li>Advanced comfort and safety features.</li>
            </ul>
        </div>
        <!-- Book Button Centered -->
        <div class="text-center">
            <a href="/booking" class="book-btn">Book Your Car</a>
        </div>
    </div>
    <!-- Footer -->
<%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Image viewer logic
        const images = [
            "/images/r-1.jpg",
            "/images/r-2.jpg",
            "/images/r-3.jpg",
            "/images/r-4.jpg"
        ];
        let currentImg = 0;
        const carImage = document.getElementById('carImage');
        function showImage(idx) {
            currentImg = (idx + images.length) % images.length;
            carImage.src = images[currentImg];
        }
        function prevImage() {
            showImage(currentImg - 1);
        }
        function nextImage() {
            showImage(currentImg + 1);
        }
        showImage(0);
    </script>
</body>
</html>