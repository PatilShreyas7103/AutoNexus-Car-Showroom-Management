<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Brands | AutoNexus</title>
	<link rel="icon" type="image/png" href="/images/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap 5 CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <%- include('partials/brands') %>
  </head>
  <body>
    <!-- Navbar (same as index.ejs) -->
<%- include('partials/navbar') %>


    <!-- Brands Hero Section -->
    <section class="brands-hero mb-5">
      <div class="brands-hero-overlay"></div>
      <div class="brands-hero-content container py-5">
        <h1>Explore Our Brands</h1>
        <p class="lead mt-3" style="color: #e0e7ff">
          Browse the best car brands and models available at AutoNexus.
        </p>
      </div>
    </section>

    <!-- Brand Gallery Section -->
    <div class="container brand-gallery-section">
      <h2 class="text-center mb-4 fw-bold" style="letter-spacing: 1px">
        Popular Brands
      </h2>
      <div class="row g-4 justify-content-center">
        <!-- Toyota -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card brand-card h-100">
            <img src="/images/Toyota.jpg" class="card-img-top" alt="Toyota" />
            <div class="card-body text-center">
              <h5 class="card-title">TOYOTA</h5>
              <a href="/toyota" class="btn btn-outline-primary btn-block"
                >View Cars</a
              >
            </div>
          </div>
        </div>
        <!-- Audi -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card brand-card h-100">
            <img src="/images/audi.jpg" class="card-img-top" alt="Audi" />
            <div class="card-body text-center">
              <h5 class="card-title">AUDI</h5>
              <a href="/audi" class="btn btn-outline-primary btn-block"
                >View Cars</a
              >
            </div>
          </div>
        </div>
        <!-- BMW -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card brand-card h-100">
            <img src="/images/bmw.jpg" class="card-img-top" alt="BMW" />
            <div class="card-body text-center">
              <h5 class="card-title">BMW</h5>
              <a href="/bmw" class="btn btn-outline-primary btn-block"
                >View Cars</a
              >
            </div>
          </div>
        </div>
        <div style="width: 20px"></div>
        <br />
        <!-- Chevrolet -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card brand-card h-100">
            <img
              src="/images/Chevrolet.jpg"
              class="card-img-top"
              alt="Chevrolet"
            />
            <div class="card-body text-center">
              <h5 class="card-title">CHEVROLET</h5>
              <a href="/chevrolet" class="btn btn-outline-primary btn-block"
                >View Cars</a
              >
            </div>
          </div>
        </div>
        <!-- Aston Martin -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card brand-card h-100">
            <img
              src="/images/Aston%20Martin.png"
              class="card-img-top"
              alt="Aston Martin"
            />
            <div class="card-body text-center">
              <h5 class="card-title">ASTON MARTIN</h5>
              <a href="/AstonMartin" class="btn btn-outline-primary btn-block"
                >View Cars</a
              >
            </div>
          </div>
        </div>
        <!-- Mitsubishi -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card brand-card h-100">
            <img
              src="/images/Mitsubishi.jpg"
              class="card-img-top"
              alt="Mitsubishi"
            />
            <div class="card-body text-center">
              <h5 class="card-title">MITSUBISHI</h5>
              <a href="/mitsubishi" class="btn btn-outline-primary btn-block"
                >View Cars</a
              >
            </div>
          </div>
        </div>
        <!-- Add more brands as needed -->
      </div>
    </div>

    <!-- Footer (same as index.ejs) -->
<%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
