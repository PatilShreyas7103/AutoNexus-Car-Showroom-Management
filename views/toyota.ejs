<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Toyota Cars | AutoNexus</title>
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap 5 CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <%- include('partials/companypage') %>
  </head>
  <body>
    <!-- Navbar (same as index.ejs) -->
    <%- include('partials/navbar') %>

    <!-- Brand Hero Section -->
    <!-- Brand Hero Section -->
    <section class="brand-hero">
      <div class="brand-hero-box text-center">
        <h1>Toyota Cars</h1>
        <p>Explore the latest Toyota models available at AutoNexus</p>
        <!-- <a href="/brands" class="hero-btn">Explore More Brands</a> -->
      </div>
    </section>

    <!-- Toyota Cars Gallery Section -->
    <div class="container brand-section">
      <h2 class="text-center mb-4 fw-bold" style="letter-spacing: 1px">
        Available Toyota Cars
      </h2>
      <div class="row g-4 justify-content-center">
        <!-- Example Toyota Car Card -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card car-card h-100">
            <img
              src="/images/fortuner.jpg"
              class="card-img-top"
              alt="Toyota Fortuner"
            />
            <div class="card-body text-center">
              <h5 class="card-title">Fortuner</h5>
              <a
                href="/toyotafortuner"
                class="btn btn-outline-primary btn-block"
                >View Details</a
              >
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card car-card h-100">
            <img
              src="/images/InnovaCrysta.jpg"
              class="card-img-top"
              alt="Toyota Innova Crysta"
            />
            <div class="card-body text-center">
              <h5 class="card-title">Innova Crysta</h5>
              <a href="/toyotainnova" class="btn btn-outline-primary btn-block"
                >View Details</a
              >
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card car-card h-100">
            <img
              src="/images/camry.jpg"
              class="card-img-top"
              alt="Toyota Camry"
            />
            <div class="card-body text-center">
              <h5 class="card-title">Camry</h5>
              <a href="/toyotacamry" class="btn btn-outline-primary btn-block"
                >View Details</a
              >
            </div>
          </div>
        </div>
        <div style="width: 50px"></div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card car-card h-100">
            <img
              src="/images/e-1.jpg"
              class="card-img-top"
              alt="Toyota Etios Cross"
            />
            <div class="card-body text-center">
              <h5 class="card-title">Etios Cross</h5>
              <a href="/toyotaetios" class="btn btn-outline-primary btn-block"
                >View Details</a
              >
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card car-card h-100">
            <img
              src="/images/p-1.jpg"
              class="card-img-top"
              alt="Toyota Land Cruiser Prado"
            />
            <div class="card-body text-center">
              <h5 class="card-title">Land Cruiser Prado</h5>
              <a href="/toyotaprado" class="btn btn-outline-primary btn-block"
                >View Details</a
              >
            </div>
          </div>
        </div>
        <!-- Add more Toyota car cards as needed -->
      </div>
    </div>

    <!-- Footer (same as index.ejs) -->
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
